{
  "KeycloakSettings": {
  "Authority": "http://localhost:18080/realms/MicroservicesRealm",
  "ClientId": "shopping-api",
  "ClientSecret": "shopping-api-secret",
  "Audience": "shopping-api",
  "Scope": "openid profile email"
},
  "ConnectionStrings": {
    "DefaultConnection": "Server=sql-server;Database=PedidosDB;User Id=sa;Password=abc1234%;TrustServerCertificate=true;",
    "SqlServer": "Server=sql-server;Database=PedidosDB;User Id=sa;Password=abc1234%;TrustServerCertificate=true;"
  },
  "OpenTelemetry": {
    "ServiceName": "api-pedidos",
    "Endpoint": "http://jaeger:4317"
  },
  "Kafka": {
    "BootstrapServers": "kafka:9094",
    "TopicPedidos": "pedidos-procesados"
  },
  "ApiPago": {
    "BaseUrl": "http://api-pago:8080"
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch:9200",
    "IndexFormat": "api-pedidos-logs-{0:yyyy.MM.dd}"
  },
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.Console", 
      "Serilog.Sinks.File", 
      "Serilog.Sinks.Elasticsearch" 
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-pedidos-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "api-pedidos-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "numberOfShards": 1,
          "numberOfReplicas": 1,
          "bufferBaseFilename": "logs/elasticsearch-buffer",
          "bufferFileSizeLimitBytes": 10485760,
          "bufferLogShippingInterval": 5000,
          "emitEventFailure": "WriteToFailureSink",
          "batchAction": "Create",
          "customFormatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch"
        }
      }
    ],
    "Enrich": [ 
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId", 
      "WithProcessId"
    ],
    "Properties": {
      "Application": "ApiPedidos",
      "Environment": "Development",
      "Version": "1.0.0"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}