{
  "KeycloakSettings": {
  "Authority": "http://localhost:18080/realms/MicroservicesRealm",
  "ClientId": "shopping-api",
  "ClientSecret": "shopping-api-secret",
  "Audience": "shopping-api",
  "Scope": "openid profile email"
},
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=PedidosDB;User Id=sa;Password=abc1234%;TrustServerCertificate=true;",
    "SqlServer": "Server=localhost,1433;Database=PagosDB;User Id=sa;Password=abc1234%;TrustServerCertificate=true;"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicPedidos": "pedidos-procesados"
  },
  "ApiPago": {
    "BaseUrl": "http://localhost:8081"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  }
}